<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#f8f898"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_myorder_return"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="取消"/>
        <TextView
            android:id="@+id/tv_myorder_title"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:text="我的收藏"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_myorder_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rbtn_myorder_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="全部"/>
        <RadioButton
            android:id="@+id/rbtn_myorder_obligation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="待付款"/>
        <RadioButton
            android:id="@+id/rbtn_myorder_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="待发货"/>
        <RadioButton
            android:id="@+id/rbtn_myorder_receive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="待收货"/>
        <RadioButton
            android:id="@+id/rbtn_myorder_evaluate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="待评价"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_myorder_replace"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </android.support.v4.view.ViewPager>
</LinearLayout>
