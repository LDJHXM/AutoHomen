<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/release_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/jiahao" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:id="@+id/search_id"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/haodou_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="菜谱、专辑、食友"
                android:textSize="25dp" />

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/message_id"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/message" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_id"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:layout_marginEnd="30dp"
                        android:id="@+id/ll_container_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" />
                </android.support.v4.view.ViewPager>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.l000phone.view.Five_Iv_Tv
                    android:layout_marginLeft="10dp"
                    android:id="@+id/popular_menu_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.l000phone.view.Five_Iv_Tv
                    android:id="@+id/see_video_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.l000phone.view.Five_Iv_Tv
                    android:id="@+id/kitchen_cheats_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.l000phone.view.Five_Iv_Tv
                    android:id="@+id/hot_activity_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                 />

                <com.l000phone.view.Five_Iv_Tv
                    android:id="@+id/menu_classify_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                 />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <com.l000phone.view.Five_big_Iv_Tv
                    android:id="@+id/Five_big_Iv_Tv_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.l000phone.view.Five_big_Iv_Tv
                    android:id="@+id/Five_big_Iv_Tv_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <com.l000phone.view.Five_big_Iv_Tv
                    android:id="@+id/Five_big_Iv_Tv_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <com.l000phone.view.Five_big_Iv_Tv
                    android:id="@+id/Five_big_Iv_Tv_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <com.l000phone.view.Five_big_Iv_Tv

                    android:id="@+id/Five_big_Iv_Tv_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <com.l000phone.view.HaoDouListView
                android:layout_marginTop="10dp"
                android:id="@+id/listView_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

            </com.l000phone.view.HaoDouListView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
