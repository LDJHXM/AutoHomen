<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="3000dp"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_myright_setting"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#ffffff"
            android:padding="3dp"
            android:scaleType="fitEnd"
           />
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/background"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_myright_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="陌上花开"
            android:textColor="#f8f"
            android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/tv_myright_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@mipmap/btn_user_recipe"
                android:gravity="center"
                android:text="菜谱"/>

            <TextView
                android:id="@+id/tv_myright_draft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@mipmap/btn_user_the_draft"
                android:gravity="center"
                android:text="草稿"/>
            <TextView
                android:id="@+id/tv_myright_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@mipmap/btn_user_topic"
                android:gravity="center"
                android:text="话题"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_myright_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_haodouxz"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  发布菜谱"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_myright_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_my_dynamic"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  我的动态"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_myright_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_my_message"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  我的消息"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_myright_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_mydown"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  我的下载"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_myright_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_myfav"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  我的收藏"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_myright_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/ico_user_myorder"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="  我的订单"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_myright_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#f8f898"
            android:text="退出登录" />
    </LinearLayout>
</ScrollView>
